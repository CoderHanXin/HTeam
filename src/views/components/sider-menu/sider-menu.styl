@import '~@/style/variable'

.sider-menu
  position relative
  display block
  margin 0
  padding 0
  outline 0
  list-style none
  color #495060
  z-index 900
.sider-menu-item
  position relative
  display block
  margin-bottom 4px
  padding 6px 24px
  outline 0
  border-right 2px solid transparent
  cursor pointer
  z-index 1
  transition all 0.2s ease-in-out
  &:hover
    background-color $color-background-hover
.sider-menu-item-active
  color $color-primary
  background $color-background-hover
  border-right 2px solid $color-primary
  &:hover
    background-color $color-background-hover