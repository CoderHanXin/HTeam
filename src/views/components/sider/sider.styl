@import '../../../style/variable'

.main-sider
  position relative
  width 72px
  min-width 72px
  max-width 72px
  flex 0 0 72px
  background #495060
.main-sider-item
  position relative
  display flex
  flex-direction column
  align-items center
  width 100%
  padding 16px
  cursor pointer
  color rgba(255, 255, 255, 0.7)
  font-size 14px
  z-index 1
  &:hover
    color #ffffff
.main-sider-item-active
  color $color-primary
  background #363e4f
  border-right 2px solid $color-primary
  &:hover
    color $color-primary
.sider-logo
  padding 16px
  align-items center
.sider-logo-img
  width 40px
  height 40px
  img
    display block
    width 100%
    height 100%
