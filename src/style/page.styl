
@import './variable'
@import './mixin'
.sub-sider
  background $color-background-light
  .header
    height 50px
    border-bottom 1px solid $color-light-grey
    .title
      float left
      line-height 50px
      margin 0 20px
      font-size $font-size-medium-x
    .more
      float right
      line-height 50px
      padding 0 16px
      color $color-text-light
      font-size 22px
      cursor pointer
      &:hover
        color $color-primary
  .menu
    background $color-background-light
    &:after
      width 0
.main-body
  color $color-text
  border-left 1px solid $color-light-grey
  .header
    position relative
    display flex
    align-items center
    height 50px
    margin 0
    padding 0 15px
    background $color-background-light
    .title
      flex 1
      line-height 50px
      font-size $font-size-medium-x
      span
        margin-right 4px
    .panel
      padding 4px
      .task-filter
        width 100px
  .content
    display flex
    flex-direction column
    margin $spacing-medium
    .filter-container
      padding-bottom 16px
.list-empty
  padding 16px
  text-align center
  font-size 14px
.task-list
  flex auto
  padding 10px 0
  background $color-background-light
.task-item
  padding-bottom 2px
  cursor pointer
.task-item-wrapper
  padding 0 20px
.task-item-body
  position relative
  display flex
  align-items center
  padding 16px 0
  &:after
    setBottomLine(#eee)
.task-item-title
  flex 1
  width 0
  padding-right 16px
  color $color-text
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
.task-item-complete
  color $color-grey
  text-decoration line-through
.task-item-meta
  flex-shrink 0
  font-size 12px
  color $color-grey
  .task-owner
    margin-right 6px
  .task-label
    margin-right 6px
  .task-tag
    margin-right 6px
    padding 2px 6px
    border-radius 3px
    color #fff
    background-color $color-error
.task-quick-add
  flex-shrink 0
  position relative
  display flex
  margin-bottom 10px
  padding 5px 16px
  border-radius 2px
  background $color-background-light
  .title
    flex 1
    display block
    width 100%
    height 40px
    padding-right 16px
    line-height 40px
    font-size 14px
    color $color-text-light
    border none
    outline none
    overflow hidden
  .meta
    flex-shrink 0
    display flex
    align-items center
    font-size 14px
    .owner
      margin-right 8px
      cursor pointer
    .deadline
      text-align right
.team-table
  padding 0
  .team-cell-user-name
    padding-right 8px
    font-size 16px
  .team-cell-user-role
    font-size 10px
    color $color-grey