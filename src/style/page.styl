
@import './variable'
@import './mixin'

/* main
   ========================================================================== */
.sub-sider
  background $color-background-light
  .header
    height 50px
    border-bottom 1px solid $color-light-grey
    .title
      float left
      line-height 50px
      margin 0 20px
      font-size $font-size-medium-x
      font-weight 600
    .more
      float right
      line-height 50px
      padding 0 16px
      color $color-text-light
      font-size 22px
      cursor pointer
      &:hover
        color $color-primary
  .sub-header
    height 40px
    min-height 40px
    // border-top 1px solid $color-light-grey
    .title
      float left
      line-height 40px
      margin 0 20px
      color $color-grey
      font-size $font-size-medium
    .more
      float right
      line-height 40px
      padding 0 16px
      color $color-text-light
      font-size 20px
      cursor pointer
  .menu
    background $color-background-light
    &:after
      width 0
.main-body
  color $color-text
  border-left 1px solid $color-light-grey
  .header
    position relative
    display flex
    align-items center
    height 50px
    min-height 50px
    margin 0
    padding 0 15px
    border-bottom 1px solid $color-light-grey
    background $color-background-light
    .title
      flex 1
      line-height 50px
      font-size $font-size-medium-x
      font-weight 600
      span
        margin-right 4px
    .panel
      padding 4px 8px
      &-item
        margin-right 8px
      .task-filter
        width 100px
  .content
    display flex
    flex-direction column
    margin $spacing-medium
    .filter-container
      padding-bottom 16px
.list-empty
  padding 16px
  text-align center
  font-size $font-size-medium
/* task list
   ========================================================================== */
.task-list
  flex auto
  padding 10px 0
  background $color-background-light
.task-item
  padding-bottom 2px
  cursor pointer
.task-item-wrapper
  padding 0 20px
.task-item-body
  position relative
  display flex
  align-items center
  // padding 16px 0
  &:after
    setBottomLine(#eee)
.task-item-title
  flex 1
  width 0
  padding 16px 16px 16px 0
  color $color-text
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
.task-item-meta
  flex-shrink 0
  font-size $font-size-small
  color $color-grey
  &-label
    padding 2px 6px
.task-quick-add
  flex-shrink 0
  position relative
  display flex
  margin-bottom 10px
  padding 5px 16px
  border-radius 2px
  background $color-background-light
  .title
    flex 1
    display block
    width 100%
    height 40px
    padding-right 16px
    line-height 40px
    font-size $font-size-medium
    color $color-text-light
    border none
    outline none
    overflow hidden
  .meta
    flex-shrink 0
    display flex
    align-items center
    font-size $font-size-medium
    &-item
      width 108px
      margin-right 8px
/* task detail
   ========================================================================== */
.task-detail
  position relative
  display flex
  flex auto
  padding 10px 0
  background $color-background-light
  &-main
    flex 1
    height 100%
  &-sider
    width 150px
    margin 0 32px
    padding-top 56px
    &-item
      margin-bottom 12px
      .item-dropdown
        width 150px
      .item-wrapper
        cursor pointer
      .item-header
        padding-bottom 6px
  &-header
    position relative
    display flex
    padding 16px
    .title
      flex 1
      width 0
      font-size $font-size-medium-x
      color $color-text
  &-content
    margin 0 16px
    padding-left 24px
    border-bottom 1px solid $color-light-grey
  &-info
    align-items center
    .info-item
      display inline-block
      color $color-grey
      &-label
        padding 2px 6px
  &-desc
    padding 16px 0
    font-size $font-size-medium
  &-events
    padding 16px
  &-event-item
    display flex
    align-items center
    padding 8px 16px
    .event-icon
      width 64px
      text-align center
    .event-text
      padding-right 8px
      color $color-grey
  &-comments
    padding 0 16px 16px
  &-comment-item
    display flex
    padding 16px
    .comment-icon
      width 64px
      text-align center
      cursor pointer
    .comment-box
      flex 1
      padding 8px
      border-radius 4px
      background #eee
    .comment-meta
      padding-top 0
      span
        padding-right 8px
    .comment-content
      padding-top 8px
      font-size $font-size-medium
  .editor-wrapper
    margin 16px 32px 100px
    border-radius 4px
    border 1px solid $color-light-grey
    .editor
      position relative
      padding 8px 16px
      border-radius 4px
      background #fff
      overflow auto
      z-index 1
      &-textarea
        display block
        line-height 1.6
        width 100%
        background #fff
        border-style none
        resize none
        outline 0
        font-size $font-size-medium
        word-wrap break-word
        overflow hidden
    .toolbar
      height 30px
      background rgb(246, 246, 246)
      border-top 1px solid rgb(238, 238, 238)
      .editor-submit
        float right
        height 30px
        padding 8px
        cursor pointer
/* task etc
   ========================================================================== */
.task-done
  color $color-grey
  text-decoration line-through
.task-expired
  color #d45d51
  background #fbdbdb
.task-level
  padding 2px 8px
.level-icon-on
  color #ed3f14
.level-icon-off
  color #ccc
/* team
   ========================================================================== */
.team-table
  padding 0
  .team-cell-user-name
    padding-right 8px
    font-size $font-size-medium-x
  .team-cell-user-role
    font-size 10px
    color $color-grey
/* stats
   ========================================================================== */
.card-header
  display flex
  padding 0
  &-meta
    display flex
    align-items center
    flex-shrink 0
    padding-right 8px
    font-size $font-size-small
  &-title
    display flex
    align-items center
    flex 1
    span
      padding-left 8px
      border-left 3px solid $color-primary
.card-body
  display flex
  padding 16px
.flex-cell
  display flex
  align-items center
  justify-content space-around
  flex auto
  width 0
/* color box
   ========================================================================== */
.color-box
  position relative
  height 24px
  line-height 0
.color-item
  position relative
  display inline-block
  width 24px
  height 24px
  margin 0 4px 4px 0
  cursor pointer
  &:hover
    outline #fff solid 2px
    box-shadow 0 0 5px 2px rgba(0, 0, 0, 0.25)
    z-index 1
.color-item-selected
  outline #fff solid 2px
  box-shadow 0 0 5px 2px rgba(0, 0, 0, 0.25)
  z-index 1