@import './variable'

html, body
  width 100%
  height 100%
  background $color-background
  color $color-text
  overflow hidden
ul
  list-style none
a
  text-decoration none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
.link-text
  color $color-grey
  &:hover
  &:active
  &:focus
    color $color-primary

  
