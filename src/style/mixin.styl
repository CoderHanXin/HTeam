@import './variable'

setTopLine($color = $color-divider-light)
  content ' '
  position absolute
  left 0
  top 0
  right 0
  height 1px
  border-top 1px solid $color
  color $color
setBottomLine($color = $color-divider-light)
  content ' '
  position absolute
  left 0
  bottom 0
  right 0
  height 1px
  border-bottom 1px solid $color
  color $color
setLeftLine($color = $color-divider-light)
  content ' '
  position absolute
  left 0
  top 0
  width 1px
  bottom 0
  border-left 1px solid $color
  color $color
setRightLine($color = $color-divider-light)
  content ' '
  position absolute
  right 0
  top 0
  width 1px
  bottom 0
  border-right 1px solid $color
  color $color
placeholder($color = $color-divider-light)
  // Firefox
  &::-moz-placeholder
    color $color
    opacity 1 // Override Firefox's unusual default opacity; see https://github.com/twbs/bootstrap/pull/11526
  // Internet Explorer 10+
  &:-ms-input-placeholder
    color $color
  // Safari and Chrome
  &::-webkit-input-placeholder
    color $color
